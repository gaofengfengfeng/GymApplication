    <TextView
        android:id="@+id/sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="20dp"
        android:text="Gym 登录"
        android:textColor="#e9e6e6"
        android:textSize="30sp" />

    <LinearLayout
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sign_in"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:background="@drawable/exidtext_border"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/login_username"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@null"
                android:ems="10"
                android:hint="  用户名"
                android:imeOptions="actionDone"
                android:selectAllOnFocus="false"
                android:singleLine="false"
                android:textColor="#e9e6e6"
                android:textColorHint="#e9e6e6"
                android:textSize="16sp"></EditText>
            <Button
            android:id="@+id/login_username_clear"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="10dp"
            android:background="@drawable/clear"
            android:clickable="true"
            android:visibility="invisible"/>
        </LinearLayout>
        <!--<View-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="1.0px"-->
            <!--android:layout_marginLeft="1.0px"-->
            <!--android:layout_marginRight="1.0px"-->
            <!--android:background="#ffc0c3c4" />-->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:background="@drawable/exidtext_border"
            android:orientation="horizontal" >
            <EditText
                android:id="@+id/login_password"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@null"
                android:imeOptions="actionDone"
                android:textSize="16sp"
                android:inputType="textPassword"
                android:ems="10"
                android:hint="  密码"
                android:textColor="#e9e6e6"
                android:textColorHint="#e9e6e6"
                >
            </EditText>
            <Button
                android:id="@+id/login_password_visible"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="0dp"
                android:background="@drawable/invisible"
                android:visibility="visible" />
            <Button
                android:id="@+id/login_password_clear"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="10dp"
                android:background="@drawable/clear"
                android:visibility="invisible"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/login"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input"
        android:layout_marginTop="10dp"
        android:background="#e03aadfd"
        android:text="登录"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"/>

    <TextView
        android:id="@+id/login_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="64dp"
        android:layout_marginRight="28dp"
        android:clickable="true"
        android:text="注册"
        android:textColor="#3aadfd"
        android:textSize="18dp" />
    <TextView
        android:id="@+id/password_forget"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="64dp"
        android:layout_marginRight="28dp"
        android:text="忘记密码？"
        android:textColor="#3aadfd"
        android:textSize="18dp" />

</RelativeLayout>